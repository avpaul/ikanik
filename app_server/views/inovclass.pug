                image.imgblock-img.img-fluid(src= block.img)
                .imgblock-overlay.text-right.px-4
                    span.imgblock-title.cta-text= block.title
                    p.imgblock-text.p-md.text-white= block.context
        
    
        .campaign.d-flex.flex-center.flex-column.mt-4
            p.text-center.campaing-text.p-md.text-primary= campaign
